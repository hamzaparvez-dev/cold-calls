source 'https://rubygems.org'

# Specify Ruby version for Render compatibility
ruby '3.2.0'

# Core application gems - minimal for maximum compatibility
gem 'sinatra'
gem 'twilio-ruby'
gem 'json'
gem 'sinatra-websocket'
gem 'mongo'
gem 'eventmachine'

# Production gems
gem 'puma'
gem 'rack'
gem 'dotenv'

# Security gems
gem 'rack-protection'
gem 'rack-cors'

group :development, :test do
  gem 'rerun'
end
